numberOfPizzas = 1
yearsOld = 29
print('In my lifetime, I have eaten ', numberOfPizzas * 52 * yearsOld, ' pizzas')

numbersOfLifetimePizzas = numberOfPizzas * 52 * yearsOld
print(numbersOfLifetimePizzas)

print('In my lifetime, I have eaten ', numbersOfLifetimePizzas, ' pizzas')

numbersOfLifetimePizzas =  numbersOfLifetimePizzas / 2
print('In my lifetime, I have eaten ', numbersOfLifetimePizzas, ' pizzas')

numbersOfLifetimePizzas =  numbersOfLifetimePizzas * 2
print(numbersOfLifetimePizzas)

numbersOfLifetimePizzas =  numbersOfLifetimePizzas / 3
print(numbersOfLifetimePizzas)

numbersOfLifetimePizzas =  numbersOfLifetimePizzas * 3 // 3
print(numbersOfLifetimePizzas)

newNumberofLifetimePizzas = numbersOfLifetimePizzas * 3 // 3
print(newNumberofLifetimePizzas)

print(numbersOfLifetimePizzas % 10 )

